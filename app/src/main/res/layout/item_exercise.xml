<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/exerciseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pesos (kg)"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/weightInput1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/peso_1"
            android:inputType="number"
            android:minHeight="48dp"
            android:layout_marginEnd="4dp"/>

        <EditText
            android:id="@+id/weightInput2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/peso_2"
            android:inputType="number"
            android:minHeight="48dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>

        <EditText
            android:id="@+id/weightInput3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/peso_3"
            android:inputType="number"
            android:minHeight="48dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>

        <EditText
            android:id="@+id/weightInput4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/peso_4"
            android:inputType="number"
            android:minHeight="48dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>

        <EditText
            android:id="@+id/weightInput5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/peso_5"
            android:inputType="number"
            android:minHeight="48dp"
            android:layout_marginStart="4dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Repeticiones"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/repsInput1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/reps_1"
            android:inputType="number"
            android:minHeight="48dp"
            android:layout_marginEnd="4dp"/>

        <EditText
            android:id="@+id/repsInput2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/reps_2"
            android:inputType="number"
            android:minHeight="48dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>

        <EditText
            android:id="@+id/repsInput3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/reps_3"
            android:inputType="number"
            android:minHeight="48dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>

        <EditText
            android:id="@+id/repsInput4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/reps_4"
            android:inputType="number"
            android:minHeight="48dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>

        <EditText
            android:id="@+id/repsInput5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/reps_5"
            android:inputType="number"
            android:minHeight="48dp"
            android:layout_marginStart="4dp"/>
    </LinearLayout>
</LinearLayout>